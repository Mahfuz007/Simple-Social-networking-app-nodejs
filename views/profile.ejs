    <%-include('includes/header')%>
  
  <div class="container py-md-5 container--narrow">
    <%-include('includes/flash')%>
    <%-include('includes/profile-shared')%>
  
    <div class="list-group">
      
        <% posts.forEach(function(post){%>
            <a href="/post/<%=post._id%>" class="list-group-item list-group-item-action">
                <img class="avatar-tiny" src="<%=avatar%>">
                <strong><%=post.title%></strong> on <%=post.createData.getDate()%>/<%=post.createData.getMonth()+1%>/<%=post.createData.getFullYear()%>
              </a>
        <%}) %>
      
    </div>
  </div>
  
  <%-include('includes/footer')%>